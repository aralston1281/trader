[Unit]
Description=Options Bot Scheduler
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/options_bot
Environment="PATH=/path/to/venv/bin"
ExecStart=/path/to/venv/bin/python -m options_bot.runner.scheduler
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target


# Ticker Universe
UNIVERSE_CSV=config/universe.csv

# Timezone
TIMEZONE=America/New_York

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
USE_DISCORD=true

# Email Notifications (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_TO=recipient@example.com
USE_EMAIL=false

# Feature Flags
USE_FINBERT=false
USE_TECHNICAL_ANALYSIS=true
USE_NEWS_ANALYSIS=true
USE_SEC_FILINGS=true
USE_FDA_TRACKING=true
USE_PATENT_TRACKING=false

# API Keys - Free Tier Options
# Get free keys at their respective websites

# Polygon.io - Options & Market Data (Free tier: 5 calls/min)
# https://polygon.io/
POLYGON_API_KEY=your_polygon_key

# Alpha Vantage - Fundamentals & Technicals (Free tier: 5 calls/min, 500/day)
# https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# News API - News Headlines (Free tier: 100 requests/day)
# https://newsapi.org/
NEWS_API_KEY=your_newsapi_key

# Finnhub - Market Data & News (Free tier: 60 calls/min)
# https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_key

# SEC EDGAR - No key needed (free, rate limited)
# https://www.sec.gov/edgar

# FDA API - No key needed (free)
# https://open.fda.gov/

# Quandl/Nasdaq Data Link - Economic & Alternative Data
# https://data.nasdaq.com/
QUANDL_API_KEY=your_quandl_key

# Benzinga (Optional - Premium)
BENZINGA_API_KEY=your_benzinga_key

# Tradier - Options Data (Sandbox free)
# https://developer.tradier.com/
TRADIER_API_KEY=your_tradier_key
TRADIER_SANDBOX=true

# Scheduling
RUN_PREMARKET=05:30
RUN_MIDMORNING=09:45

# Scoring Weights
WEIGHT_FUNDAMENTAL=0.40
WEIGHT_TECHNICAL=0.20
WEIGHT_PREMIUM=0.20
WEIGHT_CATALYST=0.15
WEIGHT_NEWS_SENTIMENT=0.05

# Output Settings
MAX_PICKS=10
MIN_LIQUIDITY_SCORE=3.0
MIN_MARKET_CAP=1000000000

# Technical Analysis Settings
TA_LOOKBACK_DAYS=90
TA_USE_RSI=true
TA_USE_MACD=true
TA_USE_SUPPORT_RESISTANCE=true
TA_USE_VOLUME_PROFILE=true

# News Settings
NEWS_LOOKBACK_DAYS=7
NEWS_MIN_RELEVANCE_SCORE=0.5

# Catalyst Settings
TRACK_STOCK_SPLITS=true
TRACK_EARNINGS=true
TRACK_FDA_EVENTS=true
TRACK_PATENT_FILINGS=false
TRACK_INSIDER_TRADING=true

# Database (for historical snapshots)
DATABASE_URL=sqlite:///data/options_bot.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/options_bot.log
